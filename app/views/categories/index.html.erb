<h3>Listing Categories</h3>

<div id="table-responsive" class="col-md-8">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%=  category.description %></td>
        <td><%= link_to (fa_icon "pencil-square-o"), edit_category_path(category) %></td>
        <td><%= link_to (fa_icon "minus"), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New', new_category_path ,class: "btn btn-info col-md-6 pull-right" %>
</div>
<br>


